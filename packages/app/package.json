{
  "name": "app",
  "private": true,
  "main": "index.js",
  "version": "0.0.1",
  "scripts": {
    "rn-cli": "node scripts/react-native.js",
    "start:android": "yarn rn-cli run-android",
    "start:windows": "yarn rn-cli run-windows",
    "start:ios": "yarn rn-cli run-ios",
    "start:web": "cross-env platform=web webpack-dev-server --config=web/webpack/dev.js --progress --colors --mode=development",
    "start:rn-dev-server": "yarn rn-cli start --reset-cache",
    "test": "jest -c jest/jest.config.js",
    "build:types": "tsc --emitDeclarationOnly",
    "start:storybook": "start-storybook -p 6006 -s ./src",
    "build:storybook": "build-storybook",
    "env:dev": "firebase use development",
    "env:prod": "firebase use production",
    "copy-assets": "cp -R ./src/assets ./dist-web",
    "build:web": "cross-env platform=web webpack --config=web/webpack/prod.js --progress --colors --mode=production && yarn run copy-assets",
    "build:web:dev": "yarn run env:dev && yarn run build:web",
    "build:web:prod": "yarn run env:prod && yarn run build:web",
    "deploy:web": "firebase deploy --only hosting",
    "deploy:web:dev": "yarn run env:dev && yarn run deploy:web",
    "deploy:web:prod": "yarn run env:prod && yarn run deploy:web"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-decorators": "7.4.4",
    "@babel/preset-env": "7.5.5",
    "@react-native-community/cli": "1.10.0",
    "@storybook/addon-a11y": "^5.2.3",
    "@storybook/addon-actions": "^5.2.1",
    "@storybook/addon-docs": "^5.2.3",
    "@storybook/addon-links": "^5.2.1",
    "@storybook/addons": "^5.2.1",
    "@storybook/react": "^5.2.1",
    "@types/color": "^3.0.0",
    "@types/jest": "24.0.18",
    "@types/lodash": "^4.14.144",
    "@types/react": "16.8.24",
    "@types/react-dom": "^16.9.3",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "2.1.0",
    "@typescript-eslint/parser": "2.1.0",
    "babel-loader": "8.0.6",
    "compression-webpack-plugin": "3.0.0",
    "cross-env": "5.2.1",
    "eslint": "6.3.0",
    "eslint-loader": "3.0.0",
    "eslint-plugin-jest": "22.16.0",
    "eslint-plugin-react": "7.14.3",
    "file-loader": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "1.5.0",
    "html-webpack-plugin": "3.2.0",
    "jest": "24.9.0",
    "metro-react-native-babel-preset": "0.56.0",
    "react-docgen-typescript-loader": "^3.3.0",
    "react-test-renderer": "^16.11.0",
    "rnpm-plugin-windows": "0.2.11",
    "typescript": "^3.6.3",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "3.8.0",
    "webpack-merge": "4.2.2"
  },
  "dependencies": {
    "@types/react-test-renderer": "^16.9.1",
    "color": "^3.1.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-native": "0.59.10",
    "react-native-windows": "0.59.0-rc.3",
    "reactxp": "2.0.0-rc.1",
    "reactxp-navigation": "^2.0.0-rc.1",
    "rnpm-plugin-windows": "^0.3.5"
  },
  "workspaces": {
    "nohoist": [
      "**"
    ]
  }
}
