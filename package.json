{
  "name": "root",
  "private": true,
  "devDependencies": {
    "lerna": "^3.16.4",
    "prettier": "^1.18.2"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "app:start:web": "yarn workspace app start:web",
    "app:start:android": "yarn workspace app start:android",
    "app:start:ios": "yarn workspace app start:ios",
    "app:start:rn-dev-server": "yarn workspace app start:rn-dev-server",
    "app:start:storybook": "yarn workspace app start:storybook",
    "cc:start": "yarn workspace create-countries start",
    "cc:populate": "yarn workspace create-countries populate && cp -R ./packages/create-countries/dist/images/* ./packages/app/src/assets/images/countries",
    "database:backup": "yarn workspace database backup",
    "database:restore:dev": "yarn workspace database restore:dev",
    "database:restore:prod": "yarn workspace database restore:prod",
    "functions:start": "yarn workspace functions start",
    "functions:deploy:dev": "yarn workspace functions deploy:dev",
    "functions:deploy:prod": "yarn workspace functions deploy:prod"
  }
}
